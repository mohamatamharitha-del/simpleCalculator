    <path
        android:pathData="M24,54 Q39,34 54,54 T84,54"
        android:strokeWidth="1.5"
        android:strokeLineCap="round">
        <aapt:attr name="android:strokeColor">
            <gradient
                android:startX="24"
                android:startY="54"
                android:endX="84"
                android:endY="54"
                android:type="linear">
                <item android:offset="0" android:color="#00E5FF" />
